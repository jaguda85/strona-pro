---
const { projekt } = Astro.props;
---

<article style="border:1px solid #ddd; border-radius:12px; padding:16px;">
  <a href={`/projekty/${projekt.slug}`} style="text-decoration:none; color:inherit;">
    <img
      src={projekt.miniatura}
      alt={projekt.tytul}
      style="width:100%; max-height:220px; object-fit:cover; border-radius:10px;"
      loading="lazy"
    />
    <h2 style="margin:12px 0 6px;">{projekt.tytul}</h2>
    <p style="margin:0; opacity:.85;">{projekt.krotko}</p>
  </a>

  <div style="margin-top:12px; display:flex; gap:10px; flex-wrap:wrap;">
    {projekt.pobierz && (
      <a href={projekt.pobierz} download style="padding:8px 12px; border:1px solid #333; border-radius:10px;">
        Pobierz .ino
      </a>
    )}

    {projekt.linki?.map((l) => (
      <a href={l.url} target="_blank" rel="noreferrer" style="padding:8px 12px; border:1px solid #333; border-radius:10px;">
        {l.label}
      </a>
    ))}
  </div>
</article>
