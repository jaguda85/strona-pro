---
import Projekty from "../../data/projekty.json";
import ProjektKafel from "../../components/ProjektKafel.astro";
---

<html lang="pl">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Projekty ESP32</title>
  </head>
  <body style="font-family: system-ui, sans-serif; margin:0;">
    <main style="max-width:1000px; margin:0 auto; padding:24px;">
      <h1>Projekty ESP32</h1>

      <section style="display:grid; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); gap:16px; margin-top:16px;">
        {Projekty.map((p) => <ProjektKafel projekt={p} />)}
      </section>
    </main>
  </body>
</html>
